<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="PackForge.App"
             RequestedThemeVariant="Dark">
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->


    <Application.Styles>
        <FluentTheme />

        <!-- Button -->
        <Style Selector="Button">
            <Setter Property="MinWidth" Value="120" />
            <Setter Property="MinHeight" Value="50" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Background" Value="#3A3A50" />
            <Setter Property="Foreground" Value="#E0E0E0" />
            <Setter Property="BorderBrush" Value="#5A5A70" />
        </Style>

        <!-- TextBoxes -->
        <Style Selector="TextBox">
            <Setter Property="MinHeight" Value="70" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Background" Value="#2A2A40" />
            <Setter Property="Foreground" Value="#E0E0E0" />
            <Setter Property="BorderBrush" Value="#3A3A50" />
            <Setter Property="UseFloatingWatermark" Value="True" />
        </Style>

        <!-- Grid -->
        <Style Selector="Grid">
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
        </Style>

        <!-- CheckBoxes -->
        <Style Selector="CheckBox">
            <Setter Property="Margin" Value="10" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
        </Style>

        <!-- ScrollViewers -->
        <Style Selector="ScrollViewer">
            <Setter Property="Margin" Value="10" />
            <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
            <Setter Property="HorizontalScrollBarVisibility" Value="Disabled" />
        </Style>

        <!-- ComboBox -->
        <Style Selector="ComboBox">
            <Setter Property="Margin" Value="10" />
            <Setter Property="Height" Value="40" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Background" Value="#2A2A40" />
            <Setter Property="Foreground" Value="#E0E0E0" />
            <Setter Property="BorderBrush" Value="#5A5A70" />
        </Style>

        <!-- Border -->
        <Style Selector="Border">
            <Setter Property="Background" Value="#2A2A40" />
            <Setter Property="BorderBrush" Value="#5A5A70" />
        </Style>
    </Application.Styles>
</Application>